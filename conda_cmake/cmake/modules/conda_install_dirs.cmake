include(GNUInstallDirs)

if(${PROJECT_NAME}_VERSION)
    set(CONDA_SUBDIR "${PROJECT_NAME}_${PROJECT_VERSION}")
    set(CONDA_INSTALL_BINDIR "${CMAKE_INSTALL_BINDIR}/${CONDA_SUBDIR}")
    set(CONDA_INSTALL_CONFIGDIR "${CMAKE_INSTALL_LIBDIR}/cmake/${CONDA_SUBDIR}")
    set(CONDA_INSTALL_INCLUDEDIR "${CMAKE_INSTALL_INCLUDEDIR}/{CONDA_SUBDIR}")
    set(CONDA_INSTALL_LIBDIR "${CMAKE_INSTALL_LIBDIR}/${CONDA_SUBDIR}")
else()
    set(CONDA_INSTALL_BINDIR "${CMAKE_INSTALL_BINDIR}")
    set(CONDA_INSTALL_CONFIGDIR "${CMAKE_INSTALL_LIBDIR}/cmake/${PROJECT_NAME}")
    set(CONDA_INSTALL_INCLUDEDIR "${CMAKE_INSTALL_INCLUDEDIR}")
    set(CONDA_INSTALL_LIBDIR "${CMAKE_INSTALL_LIBDIR}")
endif()